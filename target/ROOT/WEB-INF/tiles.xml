<tiles-definitions>
<!-- survey -->
	<definition name="survey.*" template="/WEB-INF/view/survey/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/view/survey/inc/header.jsp" />
		<put-attribute name="main" value="/WEB-INF/view/survey/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/survey/inc/footer.jsp" />
	</definition>

<!-- main- -->
	<definition name="main.*" template="/WEB-INF/view/main/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/view/main/inc/header.jsp" />
		<put-attribute name="main" value="/WEB-INF/view/main/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/main/inc/footer.jsp" />
	</definition>
	
	<!-- restaurant -->
		<definition name="restaurant.*" template="/WEB-INF/view/restaurant/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/view/restaurant/inc/header.jsp" />
		<put-attribute name="main" value="/WEB-INF/view/restaurant/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/restaurant/inc/footer.jsp" />
	</definition>
	
</tiles-definitions>